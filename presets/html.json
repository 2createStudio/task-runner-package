{
    "userIncludes": [],
    "vendorCSS": [],
    "browserSync": {
        "hostname": "localhost",
        "url": null,
        "open": "external"
    },
    "settings": {
        "css": {
            "sourcemap": false,
            "beautify": false,
            "minify": false,
            "autoprefixer": {
                "browsers": ["last 3 versions"]
            }
        },
        "webpack": {}
    },
    "paths": {
        "source": {
            "dir"       : "./src/",
            "html"      : "./src/",
            "css"       : "./src/assets/postcss/",
            "js"        : "./src/assets/js/",
            "fonts"     : "./src/assets/fonts/",
            "images"    : "./src/assets/images/",
            "sprite"    : "./src/assets/images/sprite/",
            "components": "./src/components/",
            "vendorCSS" : "./"
        },
        "dist": {
            "dir"       : "./dist/",
            "html"      : "./dist/",
            "css"       : "./dist/css/",
            "js"        : "./dist/js/",
            "fonts"     : "./dist/fonts/",
            "images"    : "./dist/images/",
            "sprite"    : "./dist/images/sprite/",
            "components": "./dist/components/",
            "vendorCSS" : "./dist/css/"
        },
        "build": {
            "dir"       : "./build/",
            "html"      : "./build/",
            "css"       : "./build/css/",
            "js"        : "./build/js/",
            "fonts"     : "./build/fonts/",
            "images"    : "./build/images/",
            "sprite"    : "./build/images/",
            "components": "./build/components/",
            "vendorCSS" : "./build/css/"
        },
        "min": {
            "dir"       : "./min/",
            "html"      : "./min/",
            "css"       : "./min/css/",
            "js"        : "./min/js/",
            "fonts"     : "./min/fonts/",
            "images"    : "./min/images/",
            "sprite"    : "./min/images/",
            "components": "./min/components/",
            "vendorCSS" : "./min/css/"
        },
        "qa": {
            "dir"       : "./~QA/",
            "hvd"       : "./~QA/html-vs-design/",
            "hvdImages" : "./~QA/html-vs-design/images/",
            "logs"      : "./~QA/logs/"
        },
        "config": {
            "dir": "./"
        },
        "userIncludes": {
            "dir": "./"
        },
        "snippet": {
            "dir"       : "./src/assets/postcss/",
            "outputDir" : "./src/assets/postcss/"
        }
    },
    "fileNames": {
        "source": {
            "spriteCSS" : "_module.sprite.css"
        },
        "dist": {
            "css"       : "app.css",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "build": {
            "css"       : "app.css",
            "sprite"    : "sprite.png",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "min": {
            "css"       : "app.css",
            "sprite"    : "sprite.png",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "qa": {
            "hvd" : {
                "settings": "settings.json"
            },
            "logs" : {
                "css" : "csslint.log"
            }
        },
        "config": ".2c-gulp-rc",

        "snippet": {
            "requires": "_snippet-requires.css",
            "components": "_snippet-components.css"
        }
    },
    "urls": {
        "dist": {
            "dir"     : "/dist/"
        }
    },
    "cssSnippets": {
        "requireUrl": "https://rawgit.com/2createStudio/postcss-require-lib/master/snippets/"
    }
}