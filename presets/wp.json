{
    "userIncludes": [],
    "vendorCSS": [],
    "browserSync": {
        "hostname": "localhost",
        "url": null,
        "open": "external"
    },
    "settings": {
        "css": {
            "sourcemap": false,
            "beautify": false,
            "minify": true,
            "autoprefixer": {
                "browsers": ["last 3 versions"]
            }
        },
        "webpack": {
            "module": {
                "loaders": [
                    {
                        "test": "(\\.jsx|\\.js)$",
                        "loaders": ["babel?presets[]=es2015"],
                        "exclude": "node_modules"
                    }
                ]
            },
            "devtool": "#eval-source-map"
        }
    },
    "paths": {
        "source": {
            "dir"       : "./src/",
            "html"      : false,
            "css"       : "./postcss/",
            "js"        : "./js/",
            "fonts"     : false,
            "images"    : false,
            "sprite"    : "./images/sprite/",
            "components": false,
            "vendorCSS" : "./"
        },
        "dist": {
            "dir"       : false,
            "html"      : false,
            "css"       : "./assets/",
            "js"        : "./assets/",
            "fonts"     : false,
            "images"    : false,
            "sprite"    : "./images/sprite/",
            "components": false,
            "vendorCSS" : "./assets/"
        },
        "build": {
            "dir"       : false,
            "html"      : false,
            "css"       : "./assets/",
            "js"        : "./assets/",
            "fonts"     : false,
            "images"    : false,
            "sprite"    : "./images/sprite/",
            "components": false,
            "vendorCSS" : "./assets/"
        },
        "min": {
            "dir"       : false,
            "html"      : false,
            "css"       : "./assets/",
            "js"        : "./assets/",
            "fonts"     : false,
            "images"    : false,
            "sprite"    : "./images/sprite/",
            "components": false,
            "vendorCSS" : "./assets/"
        },
        "qa": {
            "dir"       : false,
            "hvd"       : "./~QA/html-vs-design/",
            "hvdImages" : "./~QA/html-vs-design/images/",
            "logs"      : "./~QA/logs/"
        },
        "config": {
            "dir": "./"
        },
        "userIncludes": {
            "dir": false
        },
        "snippet": {
            "dir"       : "./postcss/",
            "outputDir" : "./postcss/"
        }
    },
    "fileNames": {
        "source": {
            "spriteCSS" : "_module.sprite.css"
        },
        "dist": {
            "css"       : "bundle.css",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "build": {
            "css"       : "bundle.css",
            "sprite"    : "sprite.png",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "min": {
            "css"       : "bundle.css",
            "sprite"    : "sprite.png",
            "vendorCSS" : "vendor.css",
            "js"        : "bundle.js"
        },
        "qa": {
            "hvd" : {
                "settings": "settings.json"
            },
            "logs" : {
                "css" : "csslint.log"
            }
        },
        "config": ".2c-gulp-rc",

        "snippet": {
            "requires": "_snippet-requires.css",
            "components": "_snippet-components.css"
        }
    },
    "urls": {
        "dist": {
            "dir"     : null
        }
    },
    "cssSnippets": {
        "requireUrl": "https://rawgit.com/2createStudio/postcss-require-lib/master/snippets/"
    }
}